@model List<AseguradoraMVC.Models.Viewmodels.SeguroViewmodels>
@{
    ViewBag.Title = "Seguros";
}
<h2>@ViewBag.Title</h2>
@*FILTRO DE BÚSQUEDA*@
<div class="text-right form-inline">
    <form method="get" action=@Url.Action("Busqueda", "Cliente" )>
        <div class="form-group">
            @Html.TextBox("buscar", null, new
            {
                placeholder = "Filtro de búsqueda",
                                    @class = "form-control"
            })
        </div>
        <button class="btn btn-success" type="submit">Buscar</button>
    </form>
</div>

<div class="row" style="text-align:right;padding:5px">

    <a href="~/Home/Index"> <img src="~/Content/Image/atras.png" alt="" width="45" height="40" title="Atras"> </a>
    <a href="~/Seguros/Nuevo"> <img src="~/Content/Image/seguro.png" alt="" width="45" height="40" title="Agregar"> </a>
</div>
<div class="row">
    <div class=" col-md-12">
        <table align="center">
            <tr>
                <th height="40" width="150" bgcolor="#85C1E9">Código</th>
                <th height="40" width="150" bgcolor="#85C1E9">Nombre</th>
                <th height="40" width="150" bgcolor="#85C1E9">Suma</th>
                <th height="40" width="150" bgcolor="#85C1E9">Prima</th>
                <th height="40" width="80" bgcolor="#85C1E9"></th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td height="35" width="150" align="center">@oElemento.Codigo</td>
                    <td height="35" width="150" align="center">@oElemento.Nombre</td>
                    <td height="35" width="150" align="center"> @oElemento.Suma</td>
                    <td height="35" width="150" align="center"> @oElemento.Prima</td>
                    <td>

                        <a href="~/Seguros/Editar/@oElemento.Codigo"> <img src="~/Content/Image/Editar.png" alt="" width="20" height="20" title="Editar"> </a>
                        <a href="~/Seguros/Eliminar/@oElemento.Codigo"> <img src="~/Content/Image/Eliminar.png" alt="" width="20" height="20" title="Eliminar"> </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<style>
    th {
        text-align: center;
    }
</style>